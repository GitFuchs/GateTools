#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import sys
import numpy as np
import phsp
import click
import os
from matplotlib import pyplot as plt

CONTEXT_SETTINGS = dict(help_option_names=['-h', '--help'])
@click.command(context_settings=CONTEXT_SETTINGS)
@click.argument('filename')
@click.option('-n', default=float(-1), help='Use -1 to read all data')
@click.option('--key', '-k', multiple=True, help='Plot the given keys')
@click.option('--quantile', '-q', default=float(0), help='Restrict histogram to quantile')
@click.option('--nb_bins', '-b',
              default=int(100),
              help='Number of bins')
def phsp_plot(filename, key, n, quantile, nb_bins):
    '''
    \b
    Plot histograms

    \b
    <INPUT_FILENAME> : input PHSP root/pny file
    '''

    # load data
    data, read_keys, m = phsp.load(filename, n)

    keys = key
    if len(key) == 0:
        keys = read_keys

    nfig = len(keys)
    nrow = int(np.sqrt(nfig))
    ncol = int(nfig/nrow)
    if ncol*nrow<nfig:
        nrow += 1
    print(len(keys), nrow, ncol)
    
    # create fig
    f, ax = plt.subplots(nrow, ncol, figsize=(15,5))

    # loop
    i = 0
    for k in keys:
        a = phsp.get_sub_fig(ax,i)
        index = read_keys.index(k)
        x = data[:,index]
        q1 = quantile
        q2 = 1.0-quantile
        q = (np.quantile(x, q1), np.quantile(x, q2))
        a.hist(x, nb_bins,
               density=True,
               histtype='stepfilled',
               #histtype='step',
               range=q,
               facecolor='g',
               alpha=0.9,
               label=k)
        a.set_ylabel('Probability')
        a.legend()
        i = i+1

    plt.tight_layout()
    plt.show()

# --------------------------------------------------------------------------
if __name__ == '__main__':
    phsp_plot()

